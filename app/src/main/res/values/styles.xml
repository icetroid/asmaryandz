<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="create_task_activity_button">
        <item name="android:layout_width">@dimen/create_task_btn_size</item>
        <item name="android:layout_height">@dimen/create_task_btn_size</item>
        <item name="android:layout_marginLeft">@dimen/create_task_btn_margin</item>
        <item name="android:layout_marginRight">@dimen/create_task_btn_margin</item>
        <item name="android:background">@drawable/create_task_button_background</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="rv_button">
        <item name="android:layout_width">@dimen/main_task_item_button_size</item>
        <item name="android:layout_height">@dimen/main_task_item_button_size</item>
        <item name="android:layout_marginLeft">@dimen/main_task_item_button_margin</item>
        <item name="android:layout_marginRight">@dimen/main_task_item_button_margin</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="test_theory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>item>
    </style>

</resources>
