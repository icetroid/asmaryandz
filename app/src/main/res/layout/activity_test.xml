<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.bmstu.iu3.totodo.ui.test.Test"
    >
    <LinearLayout
        android:id="@+id/test_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding">
        <TextView
            android:id="@+id/test_priority_a"
            android:text="@string/test_text_priority_a"
            style="@style/test_theory"/>
        <include layout="@layout/bottom_line"/>
        <TextView
            android:id="@+id/test_priority_b"
            android:text="@string/test_text_priority_b"
            style="@style/test_theory"/>
        <include layout="@layout/bottom_line"/>
        <TextView
            android:id="@+id/test_priority_c"
            android:text="@string/test_text_priority_c"
            style="@style/test_theory"/>
        <include layout="@layout/bottom_line"/>

        <TextView
            android:id="@+id/test_priority_d"
            style="@style/test_theory"
            android:text="@string/test_text_priority_d"/>
        <include layout="@layout/bottom_line"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/test"/>
        <TextView
            android:text="@string/test_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</ScrollView>