<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.bmstu.iu3.totodo.ui.main.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/toolbar"
        android:layout_width="@dimen/option_bar_button_size"
        android:layout_height="@dimen/option_bar_button_size"
        android:background="@drawable/ic_option_bar_button"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/default_upper_bar_margin"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tv_main_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_main_priority_default_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:textSize="@dimen/upper_bar_text_size"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"/>

    <!--<android.support.design.widget.FloatingActionButton-->
    <Button
        android:id="@+id/btn_open_create_task"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/ic_add_new_task"
        />

    <FrameLayout
        android:id="@+id/create_task_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <!--android:text="@string/btn_open_create_task_text"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_alignParentRight="true"-->
    <!--/>-->

</RelativeLayout>
